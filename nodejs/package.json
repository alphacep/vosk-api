{
  "name": "vosk",
  "version": "0.3.29",
  "description": "Node binding for continuous offline voice recoginition with Vosk library.",
  "repository": {
    "type": "git",
    "url": "git://github.com/alphacep/vosk-api.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "lib"
  ],
  "keywords": [
    "speech",
    "speech recognition",
    "voice"
  ],
  "author": "Alpha Cephei Inc.",
  "license": "Apache-2.0",
  "engines": {
    "node": ">= 12.x.x"
  },
  "scripts": {
    "build": "tsc -p .",
    "start": "nodemon --watch \"**/*.ts\" --ignore \"*.test.ts\" --ignore \"**/test/*\" --exec ts-node watch.ts",
    "download:lib": "wget -c $(npm view vosk dist.tarball) -O - | tar -xz && mv package/lib . && rm -rf package",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "ffi-napi": "^4.0.3",
    "ref-napi": "^3.0.0"
  },
  "devDependencies": {
    "@types/ffi-napi": "^2.4.3",
    "@types/node": "^14.14.37",
    "@types/ref-napi": "^1.4.1",
    "@types/wav": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "wav": "^1.0.2"
  }
}
